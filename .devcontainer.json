{
  "name": "WASudoku",
  "image": "h3nc4/wasudoku-dev:2.0.0",
  "runArgs": ["--name=wasudoku-devcontainer", "--network=host"],
  "remoteUser": "wasudoku",
  "workspaceFolder": "/workspaces/wasudoku",
  "mounts": [
    "source=${localWorkspaceFolder}/,target=/workspaces/wasudoku,type=bind",
    "source=${env:HOME},target=/home/wasudoku,type=bind",
    "source=/etc/localtime,target=/etc/localtime,type=bind,readonly",
    "source=/etc/profile,target=/etc/profile,type=bind,readonly",
    "source=/etc/bash.bashrc,target=/etc/bash.bashrc,type=bind,readonly",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "containerEnv": {
    "TERM": "${env:TERM}",
    "TMUX": "${env:TMUX}",
    "WASUDOKU_HOST_ROOT": "${localWorkspaceFolder}"
  },
  "remoteEnv": {
    "PATH": "/workspaces/wasudoku/node_modules/.bin:${containerEnv:PATH}"
  },
  "userEnvProbe": "interactiveShell",
  "postCreateCommand": "doas groupmod -o -g $(stat -c '%g' /var/run/docker.sock) docker && ./scripts/wasm-deps.sh -d && npm i && doas mandb",
  "customizations": {
    "vscode": {
      "extensions": [
        "timonwong.shellcheck",
        "DavidAnson.vscode-markdownlint",
        "ms-vscode-remote.vscode-remote-extensionpack",
        "ms-azuretools.vscode-docker",
        "donjayamanne.githistory",
        "eamodio.gitlens",
        "foxundermoon.shell-format",
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions"
      ],
      "settings": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true,
        "files.trimFinalNewlines": true,
        "rust-analyzer.linkedProjects": ["./src/wasudoku-wasm/Cargo.toml"],
        "prettier.enable": true,
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[typescriptreact]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[css]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[html]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "[jsonc]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode"
        },
        "shellcheck.customArgs": ["-o", "all"]
      }
    }
  }
}
